<h2>管理者ログイン</h2>

<%= form_with model: @admin_user, url: admin_user_session_path, local: true do |f| %>
  <%= render "shared/error_messages", model: f.object %>

    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %><br />

    <%= f.label :password, "パスワード（6文字以上）" %><br />
    <%= f.password_field :password, autocomplete: "new-password" %><br /><br />

    <%= f.submit "ログインする" %>
    <p><%= link_to "戻る", root_path %></p>
<% end %>