<h2>ユーザーログイン</h2>

<%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <%= render "shared/error_messages", model: f.object %>

    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %><br />

    <%= f.label :password, "パスワード（6文字以上）" %><br />
    <%= f.password_field :password, autocomplete: "new-password" %><br /><br />

    <%= f.submit "ログインする" %>
<% end %>