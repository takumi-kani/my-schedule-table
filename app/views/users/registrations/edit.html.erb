<h2>ユーザー情報変更</h2>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "shared/error_messages", model: f.object %>

    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %><br />

    <%= f.label :password, "パスワード（6文字以上）" %><br />
    <%= f.password_field :password, autocomplete: "new-password" %><br />

    <%= f.label :password_confirmation, "確認用パスワード" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br /><br />

    <%= f.submit "変更する" %>
<% end %>
