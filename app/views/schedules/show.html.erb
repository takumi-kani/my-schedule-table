<h1>タイトル</h1>
<%= @schedule.title %>

<h3>開始日時</h3>
<%= @schedule.start_time %>

<h3>終了日時</h3>
<%= @schedule.end_time %>

<h3>場所</h3>
<%= @schedule.place %>

<h3>内容</h3>
<%= @schedule.info %>

<p><%= link_to "予定の変更", edit_schedule_path(@schedule), method: :get %></p>
<p><%= link_to "予定を削除する", schedule_path(@schedule), method: :delete %></p>

<p><%= link_to "カレンダーに戻る", root_path %></p>